<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- **************************************************************** -->
    <!-- Custom attributes. -->
    <!-- **************************************************************** -->
    <eat-comment />

    <attr name="button_checked" format="reference" />
    <attr name="button_unchecked" format="reference" />
    <attr name="main_dimension">
        <!-- Defines an horizontal widget. -->
        <enum name="horizontal" value="0" />
        <!-- Defines a vertical widget. -->
        <enum name="vertical" value="1" />
    </attr>

    <declare-styleable name="AnimatedImageButton">
        <attr name="button_checked" />
        <attr name="button_unchecked" />
    </declare-styleable>
    <declare-styleable name="AnimatedRadioButton">
        <attr name="button_checked" />
        <attr name="button_unchecked" />
        <attr name="main_dimension" />
    </declare-styleable>
    <declare-styleable name="SquareImageButton">
        <attr name="main_dimension" />
    </declare-styleable>
    <declare-styleable name="DifferenceIndicatorView">
        <attr name="minusBackground" format="reference|color" />
        <attr name="plusBackground" format="reference|color" />
        <attr name="minusTextColor" format="color" />
        <attr name="plusTextColor" format="color" />
    </declare-styleable>
    <declare-styleable name="ExtendedRadioGroup">
        <attr name="background_checked" format="reference|color" />
        <attr name="background_unchecked" format="reference|color" />
        <attr name="anim_duration" format="integer" />
    </declare-styleable>

</resources>